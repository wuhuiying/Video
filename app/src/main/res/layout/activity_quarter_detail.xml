<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/quarter_detail_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quarter_detail_return"
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12px"
            android:layout_marginStart="12px"
            android:src="@drawable/raw_1500019926"/>

        <ImageView
            android:id="@+id/quarter_detail_like"
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            android:layout_marginStart="12px"
            android:layout_toEndOf="@+id/quarter_detail_return"
            android:layout_toRightOf="@+id/quarter_detail_return"
            android:src="@drawable/raw_1499933216"/>

        <ImageView
            android:id="@+id/quarter_detail_broken"
            android:layout_width="33px"
            android:layout_height="32px"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/quarter_detail_like"
            android:layout_marginLeft="12px"
            android:layout_marginStart="12px"
            android:layout_toEndOf="@+id/quarter_detail_like"
            android:layout_toRightOf="@+id/quarter_detail_like"
            android:src="@drawable/raw_1499933217"/>

        <ImageView
            android:id="@+id/quarter_detail_share"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/quarter_detail_like"
            android:layout_marginLeft="12px"
            android:layout_marginStart="12px"
            android:layout_toEndOf="@+id/quarter_detail_broken"
            android:layout_toRightOf="@+id/quarter_detail_broken"
            android:src="@drawable/raw_1499995160"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/quarter_detail_portrait"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15px"
            android:layout_marginRight="15px"
            android:src="@drawable/wei"
            fresco:actualImageScaleType="centerInside"
            fresco:roundAsCircle="true"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/quarter_detail_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <include
            layout="@layout/simple_player_view_player"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <TextView
        android:id="@+id/quarter_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21px"
        android:layout_marginStart="21px"
        android:layout_marginTop="17px"
        android:text="女子翻窗户被挂在窗户，路人围观" />

        <TextView
            android:id="@+id/quarter_detail_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21px"
            android:layout_marginTop="17px"
            android:text="15963次播放  今天19:16" />
        <TextView
            android:background="#DEDEDE"
            android:layout_width="match_parent"
            android:layout_height="228px"
            android:textSize="14px"
            android:gravity="center"
            android:text=" "
            />
    </LinearLayout>
</LinearLayout>
