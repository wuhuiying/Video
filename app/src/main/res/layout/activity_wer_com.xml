<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_LinearLayout"
    tools:context="quarter.perfect.com.quarternew.WerComActivity">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px">
        <com.facebook.drawee.view.SimpleDraweeView
            fresco:placeholderImage="@drawable/touxiang"
            fresco:roundAsCircle="true"
            android:id="@+id/quarter_wercome_touxiang_sdv"
            android:layout_width="80px"
            android:layout_height="80px" />
        <TextView
            android:layout_marginRight="10px"
            android:id="@+id/quarter_wercome_title_tv"
            android:gravity="center"
            android:layout_weight="8"
            android:layout_width="0px"
            android:layout_height="30px" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/quarter_wercome_adv_xie"
            android:background="@drawable/raw_1500034665"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="60px" />
    </LinearLayout>

    <com.hjm.bottomtabbar.BottomTabBar
        android:id="@+id/quarter_wercome_bt"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9"></com.hjm.bottomtabbar.BottomTabBar>

</LinearLayout>

